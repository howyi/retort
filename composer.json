{
    "name": "howyi/retort",
    "description": "Lite directory compressor",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":  "Hayashi Takuya",
            "email": "qrbys@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php":             ">=7.0.16",
        "symfony/yaml":    "~2.0 | ~3.0",
        "symfony/console": "~2.0 | ~3.0"
    },
    "autoload": {
        "psr-0": {
            "Howyi": "src/"
